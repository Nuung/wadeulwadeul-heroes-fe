{
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "noEmit": true,
    "paths": {
      "@/app": ["./app"],
      "@/app/*": ["./app/*"],
      "@/assets": ["./assets"],
      "@/assets/*": ["./assets/*"],
      "@/pages": ["./pages"],
      "@/pages/*": ["./pages/*"],
      "@/shared": ["./shared"],
      "@/shared/*": ["./shared/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/global.d.ts"] 
}